# FastAPI
APP_NAME=Jarvis Backend
ENVIRONMENT=development

# Home Assistant
HA_URL=http://homeassistant.local:8123
HA_TOKEN=REPLACE_ME
HA_TIMEOUT_SECONDS=10

# Ollama
OLLAMA_URL=http://host.docker.internal:11434

# FAST Modell
OLLAMA_MODEL_FAST=fixt/home-3b-v3
LLM_TIMEOUT_FAST_SECONDS=25

# SMART Modell
OLLAMA_MODEL_SMART=hermes3:8b
LLM_TIMEOUT_SMART_SECONDS=60

# Discovery cache
DISCOVERY_REFRESH_SECONDS=120
CACHE_MAX_ENTITIES=200
